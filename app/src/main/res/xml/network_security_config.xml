<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许HTTP明文通信，用于本地Ollama服务 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- 可以添加域名特定的配置以增强安全性 -->
